<UserControl
    x:Class="MachineVision.Defect.Views.DefectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MachineVision.Defect.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="[md ]http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="15"
            FontSize="22"
            FontWeight="Bold"
            Text="缺陷检测" />
        <StackPanel
            Grid.Row="1"
            Margin="15"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="搜索条件:" />
            <!--  太大的话就更改Padding="5"  -->
            <TextBox
                Width="200"
                Margin="10,0"
                Padding="5"
                VerticalAlignment="Center"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding FilterText}" />
            <Button Command="{Binding SearchCommand}" Content="搜索" />
        </StackPanel>
        <Button
            Grid.Row="1"
            Margin="15"
            HorizontalAlignment="Right"
            Command="{Binding CreateCommand}"
            Content="新建项目" />

        <DataGrid
            Grid.Row="2"
            AutoGenerateColumns="False"
            CanUserAddRows="False"            
            IsReadOnly="True"
            ItemsSource="{Binding Models}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="序号"/>
                <DataGridTextColumn Binding="{Binding Name}" Header="项目名称" />
                <DataGridTextColumn Binding="{Binding CreateDate, StringFormat='yyyy-MM-dd hh:mm:ss'}" Header="创建日期" />
                <DataGridTextColumn Binding="{Binding UpdateDate, StringFormat='yyyy-MM-dd hh:mm:ss'}" Header="更新日期" />
                <DataGridTemplateColumn Header="操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Background="Green"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Content="选择" />
                                <Button
                                    Margin="5,0"
                                    Background="Red"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Content="删除" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
