<UserControl
    x:Class="MachineVision.Defect.Views.RegionParameterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MachineVision.Defect.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="900"
    Height="600"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="15"
            FontSize="22"
            FontWeight="Bold"
            Text="检测区域参数设置" />

        <Button
            Margin="5"
            Padding="0"
            HorizontalAlignment="Right"
            Command="{Binding AddParameterCommand}"
            Style="{StaticResource MaterialDesignIconButton}">
            <md:PackIcon Kind="Add" />
        </Button>

        <DataGrid
            Grid.Row="1"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            ColumnWidth="*"
            ItemsSource="{Binding Model.Context.Setting.Parameters}"
            RowHeight="50">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="亮缺陷(阈值)">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox
                                Padding="5"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding AbsThreshold,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="亮相对级别">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox
                                Padding="5"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding VarThreshold,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="最小缺陷面积">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox
                                Padding="5"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding MinArea,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="暗缺陷(阈值)">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox
                                Padding="5"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding DarkAbsThreshold,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="暗相对级别">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox
                                Padding="5"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding DarkVarThreshold,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="最小缺陷面积">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox
                                Padding="5"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding MinDarkArea,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="       操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                Margin="0"
                                Padding="0"
                                Foreground="Red"
                                VerticalAlignment="Center"
                                Command="{Binding DataContext.DelectParameterCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource MaterialDesignIconButton}">
                                <md:PackIcon Kind="Close" />
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel
            Grid.Row="2"
            Margin="10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button Padding="20,5" Content="保存" Command="{Binding SaveCommand}"/>
            <Button
                Margin="10,0,0,0"
                Padding="20,5"
                Content="取消" Command="{Binding CancelCommand}"/>
        </StackPanel>

    </Grid>
</UserControl>
