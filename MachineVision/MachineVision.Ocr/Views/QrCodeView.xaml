<UserControl x:Class="MachineVision.Ocr.Views.QrCodeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:MachineVision.Shared.Controls;assembly=MachineVision.Shared"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MachineVision.Ocr.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignPaper}"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Margin="15">
            <TextBlock FontSize="22" Text="{Binding QrCodeService.Info.Name}" />
            <TextBlock Text="{Binding QrCodeService.Info.Description}" />
        </StackPanel>
        <!--  内容在位置摆放很重要  -->
        <TabControl Grid.Row="1" HorizontalContentAlignment="Left">
            <TabItem Header="参数说明">
                <ScrollViewer Margin="0" VerticalScrollBarVisibility="Hidden">
                    <ItemsControl Margin="15,5" ItemsSource="{Binding QrCodeService.Info.Parameters}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,10">
                                    <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                    <TextBlock Margin="20,5,0,0" Text="{Binding Description}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="关联算子">
                <ScrollViewer Margin="0" VerticalScrollBarVisibility="Hidden">
                    <ItemsControl Margin="15,5" ItemsSource="{Binding QrCodeService.Info.Predecessors}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,10">
                                    <TextBlock Text="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="代码示例" />
            <TabItem Header="开始使用">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="0.3*" />
                    </Grid.ColumnDefinitions>
                    <!--  出现访问不到字段的情况大概率是没有引用halcondonet这个dll  -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <control:ImageEditView DrawObjectList="{Binding DrawObjectList}" Image="{Binding Image}" />
                        <TextBlock
                            Grid.Row="1"
                            Margin="10"
                            Text="{Binding OcrResults.Message}" />
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <ScrollViewer VerticalScrollBarVisibility="Hidden">
                            <StackPanel Margin="5">
                                <Button Command="{Binding LoadImageCommand}" Content="加载图像" />
                                <Button
                                    Margin="0,10,0,0"
                                    Command="{Binding SetRangeCommand}"
                                    Content="设置识别范围" />
                            </StackPanel>
                        </ScrollViewer>
                        <StackPanel Grid.Row="1">
                            <Button
                                Margin="10,10"
                                Command="{Binding RunCommand}"
                                Content="执行结果" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
