<UserControl x:Class="MachineVision.TemplateMatch.Views.NccView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:MachineVision.Shared.Controls;assembly=MachineVision.Shared"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MachineVision.TemplateMatch.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignPaper}"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Margin="15">
            <TextBlock FontSize="22" Text="find_ncc_model" />
            <TextBlock Text="Find the best matches of a ncc model in iamge" />
        </StackPanel>
        <!--  内容在位置摆放很重要  -->
        <TabControl Grid.Row="1" HorizontalContentAlignment="Left">
            <TabItem Header="参数说明">
                <ScrollViewer Margin="0" VerticalScrollBarVisibility="Hidden">
                    <ItemsControl Margin="15,5" ItemsSource="{Binding MatchService.Info.Parameters}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,10">
                                    <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                    <TextBlock Margin="20,5,0,0" Text="{Binding Description}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="关联算子">
                <ScrollViewer Margin="0" VerticalScrollBarVisibility="Hidden">
                    <ItemsControl Margin="15,5" ItemsSource="{Binding MatchService.Info.Predecessors}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,10">
                                    <TextBlock Text="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="代码示例" />
            <TabItem Header="开始使用">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="0.3*" />
                    </Grid.ColumnDefinitions>

                    <!--  图像编辑器  -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="0.4*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <control:ImageEditView
                            DrawObjectList="{Binding DrawObjectList}"
                            Image="{Binding Image}"                            
                            MaskObject="{Binding MaskObj}"
                             HWindow="{Binding MatchService.HWindow,Mode=TwoWay}"/>
                        <DataGrid
                            Grid.Row="1"
                            AutoGenerateColumns="False"
                            BorderThickness="1"
                            CanUserAddRows="False"
                            IsReadOnly="True"
                            ItemsSource="{Binding MacthResults.Results}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Index}"
                                    Header="序号" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Row}"
                                    Header="Row" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Column}"
                                    Header="Column" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Angle}"
                                    Header="角度" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Score}"
                                    Header="分数" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <TextBlock Grid.Row="2" Margin="10" Text="{Binding MacthResults.Message}"/>
                    </Grid>

                    <Grid Grid.Column="1" Margin="10,0">
                        <TabControl HorizontalAlignment="Stretch">
                            <TabItem Header="基本参数">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                        <StackPanel>
                                            <Expander>
                                                <Expander.Header>
                                                    <Grid>
                                                        <TextBlock
                                                            Margin="-20,0"
                                                            FontSize="16"
                                                            Text="图像源" />
                                                    </Grid>
                                                </Expander.Header>
                                                <Expander.Content>
                                                    <StackPanel>
                                                        <Button Command="{Binding LoadImageCommand}" Content="加载图像" />
                                                    </StackPanel>
                                                </Expander.Content>
                                            </Expander>
                                            <Expander>
                                                <Expander.Header>
                                                    <Grid>
                                                        <TextBlock
                                                            Margin="-20,0"
                                                            FontSize="16"
                                                            Text="ROI范围" />
                                                    </Grid>
                                                </Expander.Header>
                                                <Expander.Content>
                                                    <StackPanel>
                                                        <Button Command="{Binding SetRangeCommand}" Content="设置识别范围" />
                                                    </StackPanel>
                                                </Expander.Content>
                                            </Expander>
                                            <Expander>
                                                <Expander.Header>
                                                    <Grid>
                                                        <TextBlock
                                                            Margin="-20,0"
                                                            FontSize="16"
                                                            Text="模版参数" />
                                                    </Grid>
                                                </Expander.Header>
                                                <Expander.Content>
                                                    <StackPanel>
                                                        <TextBlock Text="NumLevels" />
                                                        <ComboBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                            Text="{Binding MatchService.TemplateParameter.NumLevels}">
                                                            <ComboBoxItem>auto</ComboBoxItem>
                                                            <ComboBoxItem>0</ComboBoxItem>
                                                            <ComboBoxItem>1</ComboBoxItem>
                                                            <ComboBoxItem>2</ComboBoxItem>
                                                            <ComboBoxItem>3</ComboBoxItem>
                                                            <ComboBoxItem>4</ComboBoxItem>
                                                            <ComboBoxItem>5</ComboBoxItem>
                                                            <ComboBoxItem>6</ComboBoxItem>
                                                            <ComboBoxItem>7</ComboBoxItem>
                                                            <ComboBoxItem>8</ComboBoxItem>
                                                            <ComboBoxItem>9</ComboBoxItem>
                                                            <ComboBoxItem>10</ComboBoxItem>
                                                        </ComboBox>
                                                        <TextBlock Text="AngleStart" />
                                                        <TextBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                            Text="{Binding MatchService.TemplateParameter.AngleStart}" />
                                                        <TextBlock Text="AngleExtent" />
                                                        <TextBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                            Text="{Binding MatchService.TemplateParameter.AngleExtent}" />
                                                        <TextBlock Text="AngleStep" />
                                                        <ComboBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                            Text="{Binding MatchService.TemplateParameter.AngleStep}">
                                                            <ComboBoxItem>auto</ComboBoxItem>
                                                            <ComboBoxItem>0.01</ComboBoxItem>
                                                            <ComboBoxItem>0.03</ComboBoxItem>
                                                            <ComboBoxItem>0.05</ComboBoxItem>
                                                            <ComboBoxItem>0.06</ComboBoxItem>
                                                            <ComboBoxItem>0.08</ComboBoxItem>
                                                        </ComboBox>
                                                        <TextBlock Text="Metric" />
                                                        <ComboBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                            Text="{Binding MatchService.TemplateParameter.Metric}">
                                                            <ComboBoxItem>use_polarity</ComboBoxItem>
                                                            <ComboBoxItem>ignore_global_polarity</ComboBoxItem>
                                                            <ComboBoxItem>ignore_local_polarity</ComboBoxItem>
                                                            <ComboBoxItem>ignore_color_polarity</ComboBoxItem>
                                                        </ComboBox>                                                       
                                                        <Button Command="{Binding CreateTemplateCommand}" Content="创建匹配模版" />
                                                    </StackPanel>
                                                </Expander.Content>
                                            </Expander>
                                            <Expander>
                                                <Expander.Header>
                                                    <Grid>
                                                        <TextBlock
                                                            Margin="-20,0"
                                                            FontSize="16"
                                                            Text="运行参数" />
                                                    </Grid>
                                                </Expander.Header>
                                                <Expander.Content>
                                                    <StackPanel>
                                                        <TextBlock Text="AngleStart" />
                                                        <TextBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                            Text="{Binding MatchService.RunParameter.AngleStart}" />
                                                        <TextBlock Text="AngleExtent" />
                                                        <TextBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                            Text="{Binding MatchService.RunParameter.AngleExtent}" />
                                                        <TextBlock Text="MinScore" />
                                                        <TextBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                            Text="{Binding MatchService.RunParameter.MinScore}" />
                                                        <TextBlock Text="NumMatches" />
                                                        <TextBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                            Text="{Binding MatchService.RunParameter.NumMatches}" />
                                                        <TextBlock Text="MaxOverlap" />
                                                        <TextBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                            Text="{Binding MatchService.RunParameter.MaxOverlap}" />
                                                        <TextBlock Text="SubPixel" />
                                                        <ComboBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                            Text="{Binding MatchService.RunParameter.SubPixel}">
                                                            <ComboBoxItem>true</ComboBoxItem>
                                                            <ComboBoxItem>false</ComboBoxItem>
                                                        </ComboBox>
                                                        <TextBlock Text="NumLevels" />
                                                        <ComboBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                            Text="{Binding MatchService.RunParameter.NumLevels}">
                                                            <ComboBoxItem>0</ComboBoxItem>
                                                            <ComboBoxItem>1</ComboBoxItem>
                                                            <ComboBoxItem>2</ComboBoxItem>
                                                            <ComboBoxItem>3</ComboBoxItem>
                                                            <ComboBoxItem>4</ComboBoxItem>
                                                            <ComboBoxItem>5</ComboBoxItem>
                                                            <ComboBoxItem>6</ComboBoxItem>
                                                            <ComboBoxItem>7</ComboBoxItem>
                                                            <ComboBoxItem>8</ComboBoxItem>
                                                            <ComboBoxItem>9</ComboBoxItem>
                                                        </ComboBox>
                                                    </StackPanel>
                                                </Expander.Content>
                                            </Expander>
                                        </StackPanel>
                                    </ScrollViewer>
                                    <StackPanel Grid.Row="1">
                                        <Button
                                            Margin="10,10"
                                            Command="{Binding RunCommand}"
                                            Content="执行结果" />
                                    </StackPanel>
                                </Grid>
                            </TabItem>
                            <TabItem Header="结果显示">
                                <StackPanel>
                                    <DockPanel Margin="5,10" LastChildFill="False">
                                        <TextBlock FontSize="16" Text="显示文本" />
                                        <ToggleButton DockPanel.Dock="Right" IsChecked="{Binding MatchService.Setting.IsShowDisplayText}" />
                                    </DockPanel>
                                    <DockPanel Margin="5,10" LastChildFill="False">

                                        <TextBlock FontSize="16" Text="显示中点" />
                                        <ToggleButton DockPanel.Dock="Right" IsChecked="{Binding MatchService.Setting.IsShowCenter}" />
                                    </DockPanel>
                                    <DockPanel Margin="5,10" LastChildFill="False">
                                        <TextBlock FontSize="16" Text="显示检测范围" />
                                        <ToggleButton DockPanel.Dock="Right" IsChecked="{Binding MatchService.Setting.IsShowMatchRange}" />
                                    </DockPanel>
                                </StackPanel>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
